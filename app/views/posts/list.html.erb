<div class="colorlib-blog">
	<div class="container">
		<div class="row">
      <% @post.each do |post| %>
			<div class="col-md-4 animate-box">
				<article>
					<h2>
            <%= post.title %>
					</h2>
					<p class="admin">
            <span><%= post.created_at %></span>
					</p>
          <p class="admin">
            liked     <span><%= post.likes.size %></span>
          </p>
          <p><%= post.body %></p>
					<p class="author-wrap">
						<%=image_tag("person1.jpg",class:"author-img", alt: "")%>
							<a href="#" class="author">by <%= post.user.email %></a>
          </p>
          <td><%= link_to "add_like", add_like_post_path(post, user_id: current_user.id) %></td>
          <td><%= link_to "edit", edit_post_path(post) %></td>
          <td><%= link_to "show", post_path(post), method: "show" %></td>
          <td><%= link_to "delete", post_path(post), method: "DELETE" %></td>
          <br>
				</article>
			</div>
      <% end %>
		</div>
		<div class="row">
			<div class="col-md-12 text-center">
				<ul class="pagination">
					<li class="disabled">
						<a href="#">&laquo;</a>
					</li>
					<li class="active">
						<a href="#">1</a>
					</li>
					<li>
						<a href="#">2</a>
					</li>
					<li>
						<a href="#">3</a>
					</li>
					<li>
						<a href="#">4</a>
					</li>
					<li>
						<a href="#">&raquo;</a>
					</li>
				</ul>
			</div>
		</div>
	</div>
</div>
