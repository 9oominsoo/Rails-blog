<div id="colorlib-contact">
	<div class="container">
		<div class="row">
			<div class="col-md-4 col-md-push-4 animate-box">
				<h2>Post Information</h2>
				<div class="row">
					<div class="col-md-12">
						<div class="contact-info-wrap-flex">
							<div class="con-info">
								<p>
									<span>
										<i class="icon-location-2"></i>
									</span> <strong>Title</strong>
									<br> <%= @post.title %></p>
							</div>
							<div class="con-info">
								<p>
									<span>
										<i class="icon-phone3"></i>
									</span>
									<strong>Text</strong>
                  <p><%= @post.body %></p>
								</p>
							</div>
							<div class="con-info">
								<p>
									<span>
										<i class="icon-paperplane"></i>
									</span>
									<strong>Created at</strong>
                  <p><%= @post.created_at %></p>
								</p>
							</div>
							<div class="con-info">
								<p>
									<span>
										<i class="icon-globe"></i>
									</span>
                  <strong>Writer</strong>
                  <p><%= @post.user.email %></p>
								</p>
							</div>
              <%= link_to 'Edit', edit_post_path(@post) %> |
              <%= link_to 'Back', posts_list_path %>
						</div>
					</div>
				</div>
			</div>
  	</div>
	</div>
</div>
